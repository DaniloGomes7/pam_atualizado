<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logotiposemfundo"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastro"
            android:gravity="center"
            android:textSize="34sp"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            />

        <EditText android:id="@+id/edt_email"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:hint="@string/email" />

        <EditText android:id="@+id/edt_senha"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:hint="@string/senha" />


        <Button android:id="@+id/btn_cadastrar"

            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:backgroundTint="#FF0000"
            android:text="@string/cadastrar"

            />

        <Button android:id="@+id/btn_senha"

            android:padding="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:backgroundTint="#808080"
            android:text="@string/j_tenho_cadastro" />

12345678910
    </LinearLayout>